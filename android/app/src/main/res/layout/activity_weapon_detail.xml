<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp">



    <TextView
        android:id="@+id/weapon_detail_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textStyle="bold"
        android:contentDescription="@string/weapon_name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:id="@+id/monigote"
        android:layout_width="96dp"
        android:layout_height="201dp"
        android:src="@drawable/monigote"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/weapon_detail_name" />

    <View
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/FBA"
        android:background="#4400ff"
        app:layout_constraintTop_toBottomOf="@+id/monigote"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="150dp"
        />
    <View
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/RT"
        android:background="#883300"
        app:layout_constraintTop_toBottomOf="@id/monigote"
        app:layout_constraintStart_toEndOf="@+id/FBA"
        android:layout_marginTop="150dp"/>
    <View
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/RSM"
        android:background="#008822"
        app:layout_constraintTop_toBottomOf="@id/monigote"
        app:layout_constraintStart_toEndOf="@+id/RT"
        android:layout_marginTop="150dp"/>
    <View
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/WP"
        android:background="#880055"
        app:layout_constraintTop_toBottomOf="@id/monigote"
        app:layout_constraintStart_toEndOf="@+id/RSM"
        android:layout_marginTop="150dp"/>
    <View
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/FR"
        android:background="#ffff00"
        app:layout_constraintTop_toBottomOf="@id/monigote"
        app:layout_constraintStart_toEndOf="@+id/WP"
        android:layout_marginTop="150dp"/>

    <View
        android:id="@+id/head"
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="48dp"
        app:layout_constraintStart_toEndOf="@+id/monigote"
        app:layout_constraintTop_toBottomOf="@+id/weapon_detail_name" />

    <View
        android:id="@+id/body"
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="28dp"
        app:layout_constraintStart_toEndOf="@+id/monigote"
        app:layout_constraintTop_toBottomOf="@+id/head" />

    <View
        android:id="@+id/feet"
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="28dp"
        app:layout_constraintStart_toEndOf="@+id/monigote"
        app:layout_constraintTop_toBottomOf="@+id/body" />


</androidx.constraintlayout.widget.ConstraintLayout>